script/source = "# RisingRectangle.gd
extends Area2D

@export var rise_speed: float = 50.0  # Pixels per second - adjustable in inspector
@export var auto_start: bool = true   # Start rising automatically

func _ready():
	# Connect the collision signal
	body_entered.connect(_on_body_entered)
	
	# Optional: Start rising immediately
	if auto_start:
		set_physics_process(true)

func _physics_process(delta):
	# Move the rectangle upward continuously
	position.y -= rise_speed * delta

func _on_body_entered(body):
	if body.is_in_group(\"player\"):
		print(\"Player touched the rising lava!\")
		# Add your player damage/game over logic here
		if body.has_method(\"take_damage\"):
			body.take_damage()
		elif body.has_method(\"die\"):
			body.die()

# Optional: Control methods to start/stop rising
func start_rising():
	set_physics_process(true)

func stop_rising():
	set_physics_process(false)

func set_rise_speed(new_speed: float):
	rise_speed = new_speed
